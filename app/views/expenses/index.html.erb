<h1>Listing Expenses</h1>

<p><%= link_to 'New Expense', new_expense_path %></p>
<p><%= link_to 'Modify Categories', categories_path %></p>

<table class="table">
  <tr>
    <th>Category</th>
    <th>Date</th>
    <th>Concept</th>
    <th>Amount</th>
    <th colspan="3"></th>
  </tr>
  <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.category.name %></td>
      <td><%= expense.date.strftime("%B %d, %Y") %></td>
      <td><%= expense.concept %></td>
      <td><%= expense.amount %></td>
      <td><%= link_to 'Show', expense_path(expense) %></td>
      <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
      <td><%= link_to 'Destroy', expense_path(expense),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    
  <% end %>  
</table>