<%= form_for @expense do |f| %>

  <%= render partial:"shared/form_error", locals: { form: @expense } %>

  <%= f.collection_select( :category_id, Category.all, :id, :name) %>
  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date, :value => Time.now.strftime('%Y-%m-%d') %>
  </p>
  <p>
    <%= f.label :concept %><br>
    <%= f.text_area :concept %>
  </p>
  <p>
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>